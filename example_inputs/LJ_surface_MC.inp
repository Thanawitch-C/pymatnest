# The system has two types of atoms, 1 and 2 
start_species=1 38, 2 7

#Number of walkers
n_walkers=100
random_initialise_cell=False
random_initialise_pos=False

# Kill one configuration in each NS iteration
n_cull=1
# Run this many NS iterations (90*n_walkers)
n_iter_times_fraction_killed=90  

# The initial configurations are not generated by pymatnest, but supplied in a restart_file.
restart_file=LJ38_7adatom_starting_walkers.extxyz
# The first this many atoms will be kept fixed in the simulation 
keep_atoms_fixed=38
KEmax_max_T=10000

# All output files will start like this
out_file_prefix=LJ38_7adatom_K2016e1_MCe

# Use MC to generate new configuations, 200 steps (only atom moves, cell is fixed)
atom_algorithm=MC
n_model_calls_expected=200
n_atom_steps=1
atom_traj_len=5
n_cell_volume_steps=0
n_cell_shear_steps=0
n_cell_stretch_steps=0
n_swap_steps=0

# frequency of saving configuration to trajectory and snapshot (restart) file
traj_interval=50
snapshot_interval=200000

energy_calculator=fortran
FORTRAN_model=example_LJ_model.so
# LJ parameters sigma11, sigma22, epsilon11, epsilon22, cutoff (mixing by Lorentz-Berthelot rule)
# For more details see comment in the corresponding potential file
FORTRAN_model_params = 1.0 1.0 2.0 2.0 3.0

